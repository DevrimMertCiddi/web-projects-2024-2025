@model List<Personel>
@{
    ViewData["Personel Listesi"] = "Index";
}

<h1>Personel Listesi</h1>


<table class="table">
    <thead>
        <tr>
            <th>Personel-No</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Maaş</th>
            <th>İşlemler</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PersonelNo</td>
                <td>@item.Ad</td>
                <td>@item.Soyad</td>
                <td>@item.Maas</td>
                <td>
                    <a href="#" class="btn btn-primary">Detaylar</a>
                    <a href="#" class="btn btn-success">Düzenle</a>
                    <a href="#" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }

    </tbody>
</table>
